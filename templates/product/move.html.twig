{% extends 'base.html.twig' %}

{% block title %}Move Product{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1 class="mb-4">Move "{{ product.name }}" to Another Inventory</h1>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
        <div class="mb-3">
            <label>Product</label>
            <input type="text" class="form-control" value="{{ product.name }}" disabled>
        </div>

        <div class="mb-3">
            {{ form_label(form.targetInventory) }}
            {{ form_widget(form.targetInventory, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.targetInventory) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.quantity) }}
            {{ form_widget(form.quantity, {'attr': {'class': 'form-control', 'min': 1, 'max': product.quantity}}) }}
            {{ form_errors(form.quantity) }}
        </div>

        <button type="submit" class="btn btn-success">Move Product</button>
    {{ form_end(form) }}
</div>
{% endblock %}
