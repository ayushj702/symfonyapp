{% extends 'base.html.twig' %}

{% block title %}Create Category{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1>Create a new Category in {{ shop.name }}</h1>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

        <div class="mb-3">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        {# Parent Category Selection #}
        <div class="mb-3">
            {{ form_label(form.parent) }}
            {{ form_widget(form.parent, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.parent) }}
        </div>

        {# <button type="submit" class="btn btn-primary">Create Category</button> #}
    
    {{ form_end(form) }}
    <br>
    <a href="{{ path('shop_dashboard', {'id': shop.id}) }}" class="btn btn-secondary">Back to Shop Dashboard</a>
</div>
{% endblock %}
